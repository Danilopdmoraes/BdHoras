                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-secondary">Salvar Alterações</button>
                    <a class="btn btn-danger" role="button" asp-controller="Gestores" asp-action="Index">Cancelar</a>
                    <br />
                    <a class="btn btn-danger" role="button" asp-controller="Gestores" asp-action="ConfirmarExcluirGrupo">Excluir o Grupo</a>
                </div>

            </form>
        </div>
    </div>
